{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "mtush-web"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "assets/tether/dist/css/tether.min.css",
        "assets/bootstrap/dist/css/bootstrap.css",
        "assets/font-awesome/css/font-awesome.css",
        "assets/css/bootstrap-select.css",
        "assets/js/owlcarousel/dist/assets/owl.carousel.css",
        "assets/js/owlcarousel/dist/assets/owl.theme.default.css",
        "assets/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.css",
        "assets/css/style.teal.flat.css"
      ],
      "scripts": [
        "assets/jquery/dist/jquery.js",
        "assets/tether/dist/js/tether.min.js",
        "assets/bootstrap/dist/js/bootstrap.min.js",
        "assets/js/bootstrap-select.js",
        "assets/js/owlcarousel/dist/owl.carousel.js",
        "assets/ez-plus/src/jquery.ez-plus.js",
        "assets/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.js",
        "assets/js/jquery.raty-fa.js",
        "assets/js/bootstrap3-typeahead.js",
        "assets/js/bootstrap-toolkit.js",
        "assets/js/mimity.js",
        "assets/js/mimity.detail.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
